<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Financiero</title>
    <link rel="stylesheet" href="/css/finanzas.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* Estilos generales */
body {
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f5f6fa;
}

.finanzas-container {
    display: flex;
    min-height: 100vh;
}

/* Sidebar */
.finanzas-sidebar {
    width: 300px;
    background-color: #34495e;
    color: white;
    padding: 20px;
    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
}

.finanzas-sidebar h2 {
    margin-top: 0;
    padding-bottom: 10px;
    border-bottom: 1px solid #2c3e50;
    display: flex;
    align-items: center;
    gap: 10px;
}

.finanzas-sidebar .form-group {
    margin-bottom: 15px;
}

.finanzas-sidebar .form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
}

.finanzas-sidebar .form-group input,
.finanzas-sidebar .form-group select {
    width: 100%;
    padding: 8px;
    border: 1px solid #2c3e50;
    border-radius: 4px;
    background-color: #2c3e50;
    color: white;
}

.finanzas-sidebar .submit-btn {
    background-color: #27ae60;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    width: 100%;
    margin-top: 10px;
    transition: background-color 0.3s;
}

.finanzas-sidebar .submit-btn:hover {
    background-color: #2ecc71;
}

.sidebar-resumen {
    margin-top: 30px;
    padding: 15px;
    background-color: #2c3e50;
    border-radius: 8px;
    border: 1px solid #3d566e;
}

.sidebar-resumen h3 {
    border-bottom: 1px solid #3d566e;
    padding-bottom: 10px;
    margin-top: 0;
}

.sidebar-resumen p {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 10px 0;
}

.icon {
    font-size: 1.1em;
}

.icon.ingreso {
    color: #2ecc71;
}

.icon.gasto {
    color: #e74c3c;
}

/* Contenido principal */
.finanzas-main {
    flex: 1;
    padding: 30px;
    background-color: #f5f6fa;
}

.finanzas-main h1 {
    color: #2c3e50;
    margin-top: 0;
    display: flex;
    align-items: center;
    gap: 10px;
}

.resumen-financiero {
    display: flex;
    justify-content: space-between;
    margin: 20px 0;
    gap: 15px;
}

.resumen-card {
    flex: 1;
    padding: 20px;
    border-radius: 8px;
    color: white;
    text-align: center;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.resumen-card h3 {
    margin-top: 0;
    color: #ffffff;
}


.resumen-card.ingreso {
    color: #ffffff;
    background-color: #27ae60;
}

.resumen-card.gasto {
    color: #ffffff;
    background-color: #e74c3c;
}

.resumen-card.balance {
    color: #ffffff;
    background-color: #3498db;
}

.filtros {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
}

.filtros a {
    background-color: #3498db;
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.3s;
}

.filtros a.active {
    background-color: #2980b9;
    font-weight: bold;
}

.filtros a:hover {
    background-color: #2980b9;
}

.transacciones-recientes {
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.transacciones-recientes h2 {
    color: #2c3e50;
    margin-top: 0;
    display: flex;
    align-items: center;
    gap: 10px;
}

.no-data {
    text-align: center;
    color: #7f8c8d;
    padding: 20px;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 15px;
}

th, td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ecf0f1;
}

th {
    background-color: #34495e;
    color: white;
}

tr:hover {
    background-color: #f5f6fa;
}

.ingreso {
    color: #27ae60;
    font-weight: bold;
}

.gasto {
    color: #e74c3c;
    font-weight: bold;
}

.delete-btn {
    background-color: #e74c3c;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.delete-btn:hover {
    background-color: #c0392b;
}

/* Responsive */
@media (max-width: 768px) {
    .finanzas-container {
        flex-direction: column;
    }
    
    .finanzas-sidebar {
        width: auto;
    }
    
    .resumen-financiero {
        flex-direction: column;
    }
}
    </style>
</head>
<body>
    <div class="finanzas-container">
        <!-- Sidebar -->
        <div class="finanzas-sidebar">
            <h2><i class="fas fa-money-bill-wave"></i> Registro Financiero</h2>
            
            <form action="/finanzas/registrar" method="POST">
                <div class="form-group">
                    <label for="concepto">Concepto:</label>
                    <input type="text" id="concepto" name="concepto" required>
                </div>
                
                <div class="form-group">
                    <label for="monto">Descripcion</label>
                    <input type="text" id="descripcion" name="descripcion" min="0" step="0.01" required>
                </div>

                <div class="form-group">
                    <label for="monto">Monto:</label>
                    <input type="number" id="monto" name="monto" min="0" step="0.01" required>
                </div>
                
                <div class="form-group">
                    <label for="fecha">Fecha:</label>
                    <input type="date" id="fecha" name="fecha" required>
                </div>
                
                <button type="submit" class="submit-btn">Registrar</button>
            </form>
            
            <div class="sidebar-resumen">
                <h3>Resumen Rápido</h3>
                <p><i class="fas fa-arrow-up icon ingreso"></i> Ingresos: $<%= resumen.ingresos.toLocaleString() %></p>
                <p><i class="fas fa-arrow-down icon gasto"></i> Gastos: $<%= resumen.gastos.toLocaleString() %></p>
                <p>Balance: $<%= resumen.balance.toLocaleString() %></p>
            </div>
        </div>
        
        <!-- Contenido principal -->
        <div class="finanzas-main">
            <h1>Dashboard Financiero</h1>
            
            <div class="resumen-financiero">
                <div class="resumen-card ingreso">
                    <h3>Ingresos</h3>
                    <p>$<%= resumen.ingresos.toLocaleString() %></p>
                </div>
                <div class="resumen-card gasto">
                    <h3>Gastos</h3>
                    <p>$<%= resumen.gastos.toLocaleString() %></p>
                </div>
                <div class="resumen-card balance">
                    <h3>Utilidades</h3>
                    <p>$<%= resumen.balance.toLocaleString() %></p>
                </div>
                <div class="resumen-card balance">
                    <h3>Impuesto a pagar</h3>
                    <p>Pequeño contribuyente 0.5</p>
                    <p id="impuesto-pago">75</p>
                </div>
            </div>
            
            <div class="filtros">
                <a href="/finanzas?filtro=todos" class="<%= filtro === 'todos' ? 'active' : '' %>">Todos</a>
                <a href="/finanzas?filtro=ingreso" class="<%= filtro === 'ingreso' ? 'active' : '' %>">Ingresos</a>
                <a href="/finanzas?filtro=gasto" class="<%= filtro === 'gasto' ? 'active' : '' %>">Gastos</a>
            </div>
            
            <div class="transacciones-recientes">
                <h2><i class="fas fa-history"></i> Últimas Transacciones</h2>
                
                <% if (transacciones.length === 0) { %>
                    <p class="no-data">No hay transacciones registradas</p>
                <% } else { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Concepto</th>
                                <th>Monto</th>
                                <th>Tipo</th>
                                <th>Fecha</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transacciones.forEach(trans => { %>
                                <tr>
                                    <td><%= trans.concepto %></td>
                                    <td class="<%= trans.tipo %>">$<%= trans.monto.toLocaleString() %></td>
                                    <td><%= trans.tipo %></td>
                                    <td><%= trans.fecha %></td>
                                    <td>
                                        <form action="/finanzas/eliminar/<%= trans.id %>" method="POST" style="display: inline;">
                                            <button type="submit" class="delete-btn">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>
    </div>
</body>
<script> 
var ingresos = int(resumen.ingresos.toLocaleString())
var suma = 0.05 * ingresos
var texto = suma.toString()
console.log(texto)
document.getElementById("impuesto-pago").innerHTML = suma
</script>
</html>