<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Ventas y Facturación</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f9fafb;
            font-family: 'Inter', sans-serif;
            color: #1f2937;
        }
        .container {
            margin-top: 40px;
        }
        .card {
            border-radius: 16px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
            background-color: #ffffff;
            border: none;
        }
        .card-header {
            background-color: #1e293b;
            color: #ffffff;
            border-top-left-radius: 16px;
            border-top-right-radius: 16px;
            font-weight: 600;
        }
        h1, h3, h4 {
            color: #0f172a;
            font-weight: 600;
        }
        .form-label {
            font-weight: 500;
            color: #334155;
        }
        .form-control, .form-select {
            border-radius: 10px;
        }
        .btn-success {
            background-color: #10b981;
            border-color: #10b981;
            border-radius: 10px;
        }
        .btn-danger {
            background-color: #ef4444;
            border-color: #ef4444;
            border-radius: 10px;
        }
        .btn-primary {
            background-color: #3b82f6;
            border-color: #3b82f6;
            border-radius: 10px;
        }
        .btn:hover {
            opacity: 0.9;
        }
        .table-container {
            margin-top: 40px;
        }
        .table thead {
            background-color: #1e3a8a;
            color: #ffffff;
        }
        .table tbody tr:nth-child(even) {
            background-color: #f1f5f9;
        }
        .table tbody tr:nth-child(odd) {
            background-color: #e2e8f0;
        }
        .table th, .table td {
            vertical-align: middle;
            text-align: center;
            padding: 15px;
        }
    </style>
</head>
<body>

<div class="container">
    <h1 class="text-center mb-5">Registro de Ventas y Facturación</h1>

    <div class="card">
        <div class="card-header">
            <h4>Registrar Venta</h4>
        </div>
        <div class="card-body">
            <form action="/ventas/add" method="post" onsubmit="setFecha()">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="cantidad" class="form-label">Cantidad de Producto</label>
                        <input type="number" name="cantidadDeProducto" id="cantidad" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="nit" class="form-label">NIT</label>
                        <input type="number" name="nit" id="nit" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="nombreCliente" class="form-label">Nombre del Cliente</label>
                        <textarea name="nombreCliente" id="nombreCliente" class="form-control" rows="1" required></textarea>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="cantidadPagar" class="form-label">Cantidad a Pagar</label>
                        <input type="number" name="cantidadPagar" id="cantidadPagar" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="impuesto" class="form-label">Impuesto</label>
                        <input type="number" name="impuesto" id="impuesto" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="metodoVenta" class="form-label">Método de Venta</label>
                        <select name="metodo" id="metodoVenta" class="form-select" required>
                            <option value="efectivo">Efectivo</option>
                            <option value="credito">Crédito</option>
                        </select>
                    </div>
                    <div class="col-12 mb-3">
                        <label for="descripcion" class="form-label">Descripción o Motivo del Gasto</label>
                        <textarea name="descripcion" id="descripcion" class="form-control" rows="3" required></textarea>
                    </div>
                    <input type="hidden" name="fechaVenta" id="fechaVenta">
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-success">Registrar Venta</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="table-container">
        <h3 class="text-center mb-4">Historial de Ventas</h3>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#Factura</th>
                        <th>Fecha</th>
                        <th>Nombre del Cliente</th>
                        <th>NIT</th>
                        <th>Descripción</th>
                        <th>Cantidad</th>
                        <th>Método</th>
                        <th>Cantidad a Pagar</th>
                        <th>Impuesto</th>
                        <th>Total</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data.length > 0) { %>
                        <% data.forEach((venta, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= venta.fecha || 'No disponible' %></td>
                                <td><%= venta.nombreCliente %></td>
                                <td><%= venta.nit %></td>
                                <td><%= venta.descripcion %></td>
                                <td><%= venta.cantidadDeProducto %></td>
                                <td><%= venta.metodo %></td>
                                <td><%= venta.cantidadPagar %></td>
                                <td><%= venta.impuesto %></td>
                                <td><%= (parseFloat(venta.cantidadPagar) + parseFloat(venta.impuesto)).toFixed(2) %></td>
                                <td>
                                    <a href="/ventas/delete/<%= venta.id %>" class="btn btn-danger btn-sm">Eliminar</a>
                                    <a href="/ventas/factura/<%= venta.id %>" class="btn btn-primary btn-sm">Ver Factura</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="11" class="text-center">No hay datos disponibles</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function setFecha() {
        const fecha = new Date();
        const fechaFormateada = fecha.toISOString().split('T')[0]; 
        document.getElementById('fechaVenta').value = fechaFormateada;
    }
</script>

</body>
</html>

