<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro de Empleados</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #0a1d56, #0d1b2a);
      font-family: 'Roboto', sans-serif;
      color: #333;
      min-height: 100vh;
    }

    .container {
      margin-top: 50px;
      max-width: 1200px;
    }

    h1, h3 {
      color: white;
      text-align: center;
      font-weight: bold;
    }

    .card {
      border-radius: 20px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
      border: none;
      background: linear-gradient(135deg, #031e88, #0a1d56);
      color: white;
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card-header {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 20px 20px 0 0;
      padding: 20px;
      font-size: 1.5rem;
      text-align: center;
      font-weight: bold;
      color: white;
    }

    .card-body label {
      color: #ffffff;
      font-weight: 500;
    }

    .form-control, .form-select {
      border-radius: 10px;
    }

    .btn {
      border-radius: 10px;
      font-weight: bold;
      transition: all 0.2s ease-in-out;
    }

    .btn:hover {
      transform: translateY(-2px);
      opacity: 0.9;
    }

    .btn-primary {
      background: linear-gradient(135deg, #3b5bdb, #0a1d56);
      border: none;
      color: white;
    }

    .btn-success {
      background: linear-gradient(135deg, #3ba55d, #1f7c3e);
      border: none;
      color: white;
    }

    .btn-danger {
      background: linear-gradient(135deg, #e03131, #870000);
      border: none;
      color: white;
    }

    .table-container {
      margin-top: 50px;
    }

    .table-responsive {
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.1);
      overflow: hidden;
      background: white;
    }

    .table thead {
      background: linear-gradient(135deg, #3b5bdb, #0a1d56);
      color: white;
    }

    .table th, .table td {
      text-align: center;
      vertical-align: middle;
      padding: 14px;
    }

    .table tbody tr:nth-child(odd) {
      background-color: #e6edff;
    }

    .table tbody tr:nth-child(even) {
      background-color: #d6e2ff;
    }

    .text-center {
      color: #333;
      font-weight: bold;
    }
  </style>
</head>

<body>

<div class="container">
  <h1>Registro de Empleados</h1>

  <div class="card mt-4">
    <div class="card-header">Registrar Nuevo Empleado</div>
    <div class="card-body">
      <form action="/recursosHumanos/add" method="post">
        <h3 class="mb-4">Datos Personales</h3>
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Nombre</label>
            <input type="text" name="nombre" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Fecha de nacimiento</label>
            <input type="date" name="fecha_nacimiento" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Número de teléfono</label>
            <input type="tel" name="numero_telefono" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Correo electrónico</label>
            <input type="email" name="correo" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Número de DPI</label>
            <input type="number" name="Numero_Id" class="form-control" required>
          </div>
        </div>

        <h3 class="my-4">Vinculación</h3>
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Número de cuenta bancaria</label>
            <input type="number" name="cuenta_banco" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Tipo de cuenta</label>
            <select name="tipo_Cuenta" class="form-select" required>
              <option value="ahorro">Ahorro</option>
              <option value="monetario">Monetario</option>
            </select>
          </div>
          <div class="col-12">
            <label class="form-label">Dirección</label>
            <input type="text" name="direccion" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Salario</label>
            <input type="number" name="salario" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Fecha de contratación</label>
            <input type="date" name="fecha_contratacion" class="form-control" required>
          </div>
        </div>

        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-success">Registrar Empleado</button>
        </div>
      </form>
    </div>
  </div>

  <div class="table-container">
    <h3>Lista de Empleados</h3>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Fecha de Nacimiento</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>DPI</th>
            <th>Cuenta Bancaria</th>
            <th>Tipo Cuenta</th>
            <th>Dirección</th>
            <th>Salario</th>
            <th>Fecha Contratación</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (data.length > 0) { %>
            <% data.forEach((empleado, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= empleado.nombre %></td>
                <td><%= empleado.fecha_nacimiento %></td>
                <td><%= empleado.numero_telefono %></td>
                <td><%= empleado.correo %></td>
                <td><%= empleado.Numero_Id %></td>
                <td><%= empleado.cuenta_banco %></td>
                <td><%= empleado.tipo_Cuenta %></td>
                <td><%= empleado.direccion %></td>
                <td><%= empleado.salario %></td>
                <td><%= empleado.fecha_contratacion %></td>
                <td>
                  <a href="/recursosHumanos/delete/<%= empleado.id %>" class="btn btn-danger btn-sm">Eliminar</a>
                  <a href="/recursosHumanos/update/<%= empleado.id %>" class="btn btn-primary btn-sm">Actualizar</a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="12" class="text-center">No hay empleados registrados</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
